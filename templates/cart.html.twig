{% extends "baseFront.html.twig" %}
{% block match %}

    <section class="image-header">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="info">
                        <div class="wrap">
                            <ul class="breadcrumbs">
                                <li><a href="index-2.html">Main</a>/</li>
                                <li>Category</li>
                            </ul>
                            <h1>Category</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block body %}

    <!--CART WRAP BEGIN-->
<section class="cart-wrap">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                {% if items!=null %}
                <h4>Your shopping Cart</h4>
                {% endif %}
                {% if items==null %}
                <h5>There are no more items in your cart</h5>
                {% endif %}
            </div>
            <div class="col-md-12 overflow-scroll">
                {% if items!=null %}
                <table class="cart-table">

                    <tr>
                        <th></th>
                        <th class="product">Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Taille</th>
                        <th class="total">Total </th>
                    </tr>
                    {% for item in items %}
                    <tr class="cart_iem">
                        {% if item.product!=null %}
                        <td class="delete"><a href="{{ path('cart_remove',{'id':item.product.id}) }}"><i class="fa fa-close" aria-hidden="true"></i></a></td>
                        <td class="name"><img class="product-image" src="{{  asset('uploads/img/' ~ item.product.img) }}" width="200" height="200" alt="cart-product">{{ item.product.nomp }}</td>
                        <td class="cost"> {{ item.product.prix }} dt</td>
                        <td class="quantity">{{ item.quantity }}</td>
                        <td class="">{{ item.taille }}</td>
                        <td class="price">{{ item.quantity * item.product.prix }} dt </td>
                        {% endif %}

                    </tr>
                    {% endfor %}
                </table>
                {% endif %}
            </div>
            <div class="col-md-4 col-sm-6">
                <div class="coupon">

                </div>
            </div>
            <div class="col-md-8 col-sm-6">
                <div class="update-wrap">

                </div>
            </div>
            <div class="col-md-8 col-sm-12">
                <div class="cart-offer">

                    <div class="offer">
                        <div class="store-badge new"></div>
                        <div class="title"> </div>

                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-12">
                <div class="cart-total">

                    <div class="delivery-list">

                        <div class="cart-total-info">
                            <div class="title">Total</div>
                            <div class="price">{{ total }} dt </div>
                        </div>
       {% if items!=null %}
                        <form action="{{ path('add_commande') }}">
                            <ul>

<li>
                                    <input type="checkbox" name="qr" value="qr" class="filter-check" id="test1">
                                    <label for="test1">Qr-code </label>


                                    <input  type="checkbox" class="filter-check" name="mail" value="mail"  id="test2">
                                    <label for="test2">Mail</label>
</li>

                            </ul>
                        <button class="proceed">Proceed to checkout<i class="fa fa-long-arrow-right" aria-hidden="true"></i></button>
                        </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



    {% endblock %}

