{% extends 'baseBack.html.twig' %}
{% block body %}
    <script src="{{ asset('testimp/js/jquery-1.10.2.js') }}"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="{{ asset('testimp/js/bootstrap.min.js') }}"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="{{ asset('testimp/js/jquery.metisMenu.js') }}"></script>
    <!-- DATA TABLE SCRIPTS -->
    <script src="{{ asset('testimp/js/dataTables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('testimp/js/dataTables/dataTables.bootstrap.js') }}"></script>
    <link href="{{ asset('testimp/css/bootstrap.css') }}" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="{{ asset('testimp/css/font-awesome.css') }}" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="{{ asset('testimp/css/custom.css') }}" rel="stylesheet" />
    <script>

        $(document).ready(function() {
            $('#example').DataTable();
        } );
    </script>
    <!-- CUSTOM SCRIPTS -->
    <script src="assets/js/custom.js"></script>


    <div class="card flex-fill">
        <div class="card-header">

            <h5 class="card-title mb-0">Badges <a class="badge bg-dark text-white ms-2" href="addBadge">
                    Add Badge
                </a></h5>

        </div>


        <!-- Advanced Tables -->


        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
            <tr>
                <th>Badge Name</th>
                <th>P-Needed</th>
                <th>IMG</th>
                <th>actions</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for i in b %}
                <tr>
                    {# <td class="d-none d-xl-table-cell">{{ i.id}}</td> #}
                    <td class="d-none d-xl-table-cell">{{ i.nomb}}</td>
                    <td class="d-none d-xl-table-cell">{{ i.nb}}</td>

                    <td class="d-none d-xl-table-cell"><img src="{{ asset('uploads/img/' ~ i.logob) }}" alt="" style="width: 50px" style="height:50px"></td>

                    <td class="d-none d-xl-table-cell"><form action="{{ path('updateBadge',{'id':i.id,'name':i.nomb}) }}"><button class="btn btn-success"> update  </button></form></td>
                    <td class="d-none d-xl-table-cell"><form action="{{ path('deleteBadge',{'id':i.id,'name':i.nomb}) }}"><button class="btn btn-danger"> delete  </button></form></td>
                </tr>
            {% endfor %}

            </tbody>

        </table>
    </div>




{% endblock %}
