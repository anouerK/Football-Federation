{% extends 'baseBack.html.twig' %}
{% block body %}


    <main class="content">
        <div class="container-fluid p-0">

            <div class="mb-3">
                <h1 class="card  text-center ">Ajout Tournois</h1>
                <a class="badge bg-dark text-white ms-2" href="/afficheT">
                    Listes Des Tournois :
                </a>
            </div>
            <div class="row">
                <div class="col-12 col-lg-6">
                    <div class="card">
                        <div class="card">
                            {% form_theme (f) 'form_table_layout.html.twig' %}

                        {{ form_start(f, {'attr': {'novalidate': 'novalidate'}} ) }}

                                <div class="card ">
                                    <div class="card-body">
                                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                            <thead>
                                            <tr>
                                                <td><h5 class="card-title ">Nom :</h5>{{ form_widget(f.nomt, {'attr': {'class': 'form-control'}}) }}{{ form_errors  (f.nomt) }}</td>
                                            </tr>
                                            <tr>
                                                <td><h5 class="card-title ">Logo :</h5>{{ form_widget(f.logo, {'attr': {'class': 'form-control'}}) }}{{ form_errors(f.logo) }}</td>
                                            </tr>
                                            <tr>
                                                <td><h5 class="card-title ">Date Debut :</h5>{{ form_widget(f.dated, {'attr': {'class': 'form-control'}}) }}{{ form_errors(f.dated) }}</td>
                                            </tr>
                                            <tr>
                                                <td><h5 class="card-title ">Date Fin :</h5>{{ form_widget(f.datef, {'attr': {'class': 'form-control'}}) }}{{ form_errors(f.datef) }}</td>
                                            </tr>
                                            <tr>
                                                <td><h5 class="card-title ">Type :</h5>{{ form_widget(f.typet, {'attr': {'class': 'form-control'}}) }}{{ form_errors(f.typet) }}</td>
                                            </tr>
                                            <tr>
                                                <td><h5 class="card-title ">Nombre Club :</h5>{{ form_widget(f.nbrc, {'attr': {'class': 'form-control'}}) }}{{ form_errors(f.nbrc) }}</td>
                                            </tr>

                                            </thead>
                                            <tbody  class="card-header" data-prototype="
">

                                            </tbody>

                                        </table>

                                    </div>


                                        <button class="btn btn-secondary ">save</button>


                                </div>







                            {{ form_end(f) }}



                        </div>
                        </div>
                        </div>
            </div>
            </div>
    </main>

{% endblock %}