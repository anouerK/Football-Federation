{% extends 'baseBack.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

    
        <div class="content-wrapper">
      
    <h1 >User index</h1>

    <table class="table"style="width: 1200px" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>email</th>
                <th>nombre participation</th>
                <th>Badge</th>
                <th>Role</th>
                <th>image</th>
                <th>actions</th>
                <th></th>


            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr >
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.nbp }}</td>

                {% if user.badge.logoB != null %}
                <td> <img src="{{  asset('uploads/img/' ~user.badge.logoB )}}"style="width: 100px" style="height:100px"></td>
                {% else %}
                    <td> </td>
                    {%  endif %}
                <td>{{ user.role }}</td>


                <td><img src="{{ asset('uploads/img/' ~user.img) }}"style="width: 100px" style="height:100px"></td>
                <td> <form action="{{ path('updateUser',{'id':user.id}) }}"><button class="btn btn-info"> update  </button></form></td>
                <td> <form action="{{ path('deleteUser',{'id':user.id}) }}"><button class="btn btn-info"> supprimer  </button></form></td>

            </tr>


        {% endfor %}
        </tbody>
    </table>
            {{  knp_pagination_render(users)}}




</div>


{% endblock %}
