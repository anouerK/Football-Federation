{% extends 'baseBack.html.twig' %}

{% block body %}

    <div class="row">
    <div class="col-12 col-lg-8 col-xxl-9 d-flex">
        <div class="card flex-fill">
            <div class="card-header">

                <h5 class="card-title mb-0">Listes Des Classements</h5>
            </div>
            <table class="table table-hover my-0">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Tournoi</th>
                    <th>Club</th>


                </tr>
                </thead>
                <tbody>
                {% for i in r %}
                <tr>
                    <td> {{ i.id }}</td>

                    <td><span class="badge bg-success">{{ i.tournoi.nomt  }}</span></td>
                    <td><span class="badge bg-success">{{ i.club.nomc  }}</span></td>



                    <td> <form action="{{ path('suppClassement',{'id':i.id}) }}"><button class="btn btn-info"> supprimer  </button></form></td>
                    <td> <form action="{{ path('modifClassement',{'id':i.id}) }}"><button class="btn btn-info"> modifier  </button></form></td>
                    {% endfor %}
                </tr>
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}