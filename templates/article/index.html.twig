{% extends 'baseBack.html.twig' %}
{% block body %}
    <script src="{{ asset('testimp/js/jquery-1.10.2.js') }}"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="{{ asset('testimp/js/bootstrap.min.js') }}"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="{{ asset('testimp/js/jquery.metisMenu.js') }}"></script>
    <!-- DATA TABLE SCRIPTS -->
    <script src="{{ asset('testimp/js/dataTables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('testimp/js/dataTables/dataTables.bootstrap.js') }}"></script>
    <link href="{{ asset('testimp/css/bootstrap.css') }}" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="{{ asset('testimp/css/font-awesome.css') }}" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="{{ asset('testimp/css/custom.css') }}" rel="stylesheet" />
    <script src="assets/js/custom.js"></script>
            <div class="card flex-fill">
                <div class="card-header">
                    <h5 class="card-title mb-0">Articles <a class="badge bg-dark text-white ms-2" href="addArticle">
                            Add Article
                        </a></h5>
                </div>
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                    <tr class="active">
                        <th>ArticleID</th>
                        <th class="d-none d-xl-table-cell">Article Title</th>
                        <th class="d-none d-xl-table-cell">descr</th>
                        <th class="d-none d-md-table-cell">datea</th>
                        <th class="d-none d-md-table-cell">username</th>
                        <th class="d-none d-md-table-cell">img</th>
                        <th class="d-none d-md-table-cell">actions</th>
                        <th class="d-none d-md-table-cell"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for b in a %}
                        <tr>
                            <td class="d-none d-xl-table-cell">{{ b.id}}</td>
                            <td class="d-none d-xl-table-cell">{{ b.titre}}</td>
                            <td class="d-none d-xl-table-cell">{{ b.descr}}</td>

                            <td class="d-none d-xl-table-cell"> {{ b.datea |date('d-m-Y')}}</td>
                            <td class="d-none d-xl-table-cell">{{ b.getUser().username}}</td>
                            <td class="d-none d-xl-table-cell"><img src="{{ asset('uploads/img/' ~ b.img) }}" alt="" style="width: 200px" style="height:200px"></td>


                            <td class="d-none d-xl-table-cell"><form action="{{ path('updateArticle',{'id':b.id,'name':b.titre}) }}"><button class="btn btn-success"> update  </button></form></td>
                            <td class="d-none d-xl-table-cell"><form action="{{ path('deleteArticle',{'id':b.id,'name':b.titre}) }}"><button class="btn btn-danger"> delete  </button></form></td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>

            </div>

{% endblock %}
